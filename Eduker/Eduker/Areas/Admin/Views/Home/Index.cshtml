@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_AdminLayout";
}
<div id="right-panel" class="right-panel">
    <div class="breadcrumbs">
        <div class="breadcrumbs-inner" style="background-color: #0a58ca">
            <div class="row m-0">
                <div class="col-sm-4">
                    <div class="page-header float-left" style="background-color: #0a58ca">
                        <div class="page-title">
                            <h1 style="color: #eaebf0">What you want to do</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="animated fadeIn">
            <div class="buttons">
                <a asp-area="Admin" asp-controller="Roles" asp-action="Index">
                    <button type="button" class="btn btn-outline-primary btn-lg btn-block" style="width: 200px; display: block; margin: 20px 0;">
                        Roles
                    </button>
                </a>

                <a asp-area="Admin" asp-controller="User" asp-action="Index">
                    <button type="button" class="btn btn-outline-primary btn-lg btn-block" style="width: 200px; display: block; margin: 20px 0;">
                        Users
                    </button>
                </a>
                
                <a asp-area="Admin" asp-controller="Events" asp-action="Index">
                    <button type="button" class="btn btn-outline-primary btn-lg btn-block" style="width: 200px; display: block; margin: 20px 0;">
                        Events
                    </button>
                </a>

                @* <a asp-area="Admin" asp-controller="Instructor" asp-action="Index"> *@
                @*     <button type="button" class="btn btn-outline-primary btn-lg btn-block" style="width: 200px; display: block; margin: 20px 0;"> *@
                @*         Instructor *@
                @*     </button> *@
                @* </a> *@
            </div>
        </div>
    </div>
</div>