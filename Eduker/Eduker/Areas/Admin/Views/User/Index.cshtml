@using Eduker.Areas.Admin.ViewModels.UserVm;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<UserVm>
@{
    List<int> a = new List<int>();
}
@{
    Layout = "_AdminLayout";
}

<div id="right-panel" class="right-panel">
    <div class="breadcrumbs">
        <div class="breadcrumbs-inner" style="background-color: #0a58ca">
            <div class="row m-0">
                <div class="col-sm-4">
                    <div class="page-header float-left" style="background-color: #0a58ca">
                        <div class="page-title">
                            <h1 style="color: #eaebf0">Users</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="content" style="width: 600px">
            <div class="table-stats order-table ov-h">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                    @{
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.Name</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="User" asp-action="EditUser" asp-route-id="@x.Id">
                                        <button type="button" class="btn btn-outline-primary">
                                            Edit
                                        </button>
                                    </a>
                                </td>
                                <td>
                                    <a asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@x.Id">
                                        <button type="button" class="btn btn-outline-danger">
                                            Delete
                                        </button>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="right-panel" class="right-panel">
    <div class="breadcrumbs" style="margin-top: 30px">
        <div class="breadcrumbs-inner" style="background-color: #0a58ca">
            <div class="row m-0">
                <div class="col-sm-4">
                    <div class="page-header float-left" style="background-color: #0a58ca">
                        <div class="page-title">
                            <h1 style="color: #eaebf0">Add User</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <form method="post">
            <div>
                <p style="margin-bottom: 0;">Username</p>
                @Html.Editor("name")
                @Html.ValidationMessage("name")
            </div>

            <div style="margin-top: 30px">
                <p style="margin-bottom: 0;">Email</p>
                @Html.Editor("email")
                @Html.ValidationMessage("email")
            </div>

            <div style="margin-top: 30px">
                <p style="margin-bottom: 0;">Password</p>
                @Html.Editor("password")
                @Html.ValidationMessage("password")
            </div>

            <div style="margin-top: 30px">
                <p style="margin-bottom: 0;">Role</p>
                @Html.Editor("role")
                @Html.ValidationMessage("role")
            </div>

            <div style="margin-top: 30px">
                <p style="margin-bottom: 0;">Real name</p>
                @Html.Editor("realname")
            </div>

            <div style="margin-top: 30px">
                <p style="margin-bottom: 0;">Address</p>
                @Html.Editor("address")
            </div>

            <button type="submit" class="btn btn-outline-primary" style="margin-top: 30px">
                Create User
            </button>
        </form>
        <br/>
    </div>
</div>

<div id="right-panel" class="right-panel">
    <div class="breadcrumbs" style="margin-top: 30px">
        <div class="breadcrumbs-inner" style="background-color: #0a58ca">
            <div class="row m-0">
                <div class="col-sm-4">
                    <div class="page-header float-left" style="background-color: #0a58ca">
                        <div class="page-title">
                            <h1 style="color: #eaebf0">User Roles</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="content" style="width: 600px">
            <div class="table-stats order-table ov-h">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Role</th>
                        <th>Edit</th>
                    </tr>
                    </thead>
                    <tbody>
                    @{
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.Name</td>
                                <td>@x.Role</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="User" asp-action="EditRole" asp-route-id="@x.Id">
                                        <button type="button" class="btn btn-outline-primary">
                                            Change
                                        </button>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="right-panel" class="right-panel">
    <div class="content">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index">
            <button type="submit" class="btn btn-link btn-sm" style>
                Back
            </button>
        </a>
    </div>
</div>
