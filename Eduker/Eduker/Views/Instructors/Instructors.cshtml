@model Eduker.ViewModels.InstructorsVm.InstructorsVm
<!-- team area start -->
<section class="team__area pt-115">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-xxl-6 col-xl-6 col-lg-6">
                <div class="section__title-wrapper-2 mb-40">
                    <span class="section__title-pre-2">Top Instructors</span>
                    <h3 class="section__title-2">Become A Instruction Instructor.</h3>
                </div>
            </div>
            <div class="col-xxl-6 col-xl-6 col-lg-6">
                <div class="team__wrapper mb-45 pl-70">
                    <p>Здесь собраны лучшие учителя всех времен и народов! </p>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var i in Model.Instructors)
            {
                <div class="col-xxl-3 col-xl-3 col-lg-4 col-md-6">
                    <div class="team__item text-center mb-40">
                        <div class="team__thumb">
                            <img src="@i.ImgUrl" width="259" height="370" alt="">
                            @* TODO Тут всякие медиаприколы
                            @* <div class="team__social transition-3"> *@
                            @*     <a href="#"> *@
                            @*         <i class="fa-brands fa-facebook-f"></i> *@
                            @*     </a> *@
                            @*     <a href="#"> *@
                            @*         <i class="fa-brands fa-twitter"></i> *@
                            @*     </a> *@
                            @*     <a href="#"> *@
                            @*         <i class="fa-brands fa-linkedin-in"></i> *@
                            @*     </a> *@
                            @*     <a href="#"> *@
                            @*         <i class="fa-brands fa-pinterest-p"></i> *@
                            @*     </a> *@
                            @* </div> *@
                        </div>
                        <div class="team__content">
                            <h3 class="team__title">
                                <a asp-controller="CurrentInstructor" asp-route-id="@i.Id" >@i.Name @i.Surname</a>
                            </h3>
                            <span class="team__designation">@i.Specialization</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- team area end -->